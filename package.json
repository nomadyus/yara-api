{
  "name": "yara-api",
  "version": "1.0.0",
  "description": "A simple web API that returns the weather for a provided city.",
  "private": true,
  "engines": {
    "node": ">=17.4.0s"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "npx tsc -p tsconfig.json",
    "prestart": "npm run test; npm run build",
    "start": "node dist/app.js",
    "dev": "concurrently \"npx tsc -p tsconfig.json --watch\" \"nodemon -q dist/app.js\"",
    "swagger:serve": "npx swagger project start"
  },
  "keywords": [
    "city",
    "weather",
    "api"
  ],
  "author": "yusuf@spacemango.io",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "swagger-ui-express": "^4.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "concurrently": "^7.1.0",
    "jest": "^28.0.3",
    "nodemon": "^2.0.16",
    "swagger": "^0.7.5",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
